{
  "manifest_version": 3,
  "name": "RespImageLint",
  "description": "Lint images for responsiveness",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "declarativeNetRequestWithHostAccess", "browsingData"],
  "minimum_chrome_version": "101",
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}
